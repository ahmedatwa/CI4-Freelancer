{% if languages|length > 0 %}
  <div class="footer-row">
  <div class="footer-row-inner language-switcher">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
    <input type="hidden" name="{{ csrf_token() }}" value="{{ csrf_hash() }}" />
    <div class="form-group">
      <select class="custom-select" id="language-list">
      {% for language in languages %}
      {% if language.code == code %}
            <option value="{{ language.code }}" data-redirect="{{ language.href }}" selected/>{{ language.name }}</option>
          {% else %}
            <option value="{{ language.code }}" data-redirect="{{ language.href }}"/>{{ language.name }}</option>
        {% endif %}
        {% endfor %}
      </select>
    </div>
    <input type="hidden" name="code" value=""/> 
    <input type="hidden" name="redirect" value=""/>
  </form>
</div>
</div>
{% endif %}