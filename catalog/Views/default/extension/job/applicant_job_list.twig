<div class="table-responsive">
<table class="table table-striped table-bordered" id="table-employer-candidates">
  <thead>
    <tr>
      <th scope="col">Job ID</th>
      <th scope="col">Job Name</th>
      <th scope="col">Type</th>
      <th scope="col">Salary</th>
      <th scope="col">Status</th>
      <th scope="col">Date Added</th>
    </tr>
  </thead>
  <tbody>
    {% for job in jobs %}
    <tr>
      <th scope="row">{{ job.job_id }}</th>
      <td>{{ job.name }}</td>
      <td>{{ job.type }}</td>
      <td>{{ job.salary }}</td>
      <td>{{ job.status }}</td>
      <td>{{ job.date_added }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
<link rel="stylesheet" href="catalog/default/vendor/DataTables/datatables.css" media="all" type="text/css" />
<script src="catalog/default/vendor/DataTables/datatables.min.js" type="text/javascript"></script>
<script type="text/javascript">
$('#table-employer-candidates').DataTable({
    "lengthMenu": [10, 20, 30],
});
</script>