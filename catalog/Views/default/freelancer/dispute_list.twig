<div class="table-responsive">
	<table class="table table-striped table-bordered w-100" id="table-disputes-freelancer">
		<thead>
			<tr>
				<th>{{ column_project_id }}</th>
				<th>{{ column_employer_id }}</th>
				<th>{{ column_comment }}</th>
				<th>{{ column_date_added }}</th>
				<th>{{ column_status }}</th>
				<th>{{ column_action }}</th>
			</tr>
		</thead>
		<tbody>
			{% if disputes %}
			{% for dispute in disputes %}
			<tr>
				<td>{{ dispute.project_id }}</td>
				<td>{{ dispute.employer }}</td>
				<td>{{ dispute.comment }}</td>
				<td>{{ dispute.date_added }}</td>
				<td>{{ dispute.status }}</td>
				<td>{{ dispute.action }}</td>
			</tr>
			{% endfor %}
			{% endif %}
		</tbody>
	</table>
</div>
<link rel="stylesheet" href="catalog/default/vendor/DataTables/datatables.css" media="all" type="text/css" />
<script src="catalog/default/vendor/DataTables/datatables.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$('#table-disputes-freelancer').DataTable({
		"lengthMenu": [10, 25],
	});
</script>