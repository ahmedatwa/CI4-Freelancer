{{ header }} {{ menu }}
<div class="jumbotron">
	<div class="container-fluid">
		<h2 class="display-5">{{ heading_title }}</h2>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<nav id="breadcrumbs">
				<ul>
					{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
					{% endfor %}
				</ul>
			</nav>
		</div>
	</div>
</div>
<!-- Page Content -->
<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="companies-list">
				{% for category in categories %}
				<a href="{{ category.href }}" class="company">
					<div class="company-inner-alignment">
						<span class="company-logo"><i class="{{ category.icon }} fa-5x"></i></span>
						<h4>{{ category.name }}</h4>
						<small>{{ category.description }}</small>
					</div>
				</a>
				{% endfor %}
			</div>
		</div>
		<hr />
		<div class="col-12 margin-top-40 margin-bottom-25">
			<h3>{{ heading_title }}</h3>
			<div class="row">
				{% for category in categories %}
				{% if category.children %}
				<div class="col">
					<div class="section-headline border-top margin-top-40 padding-top-45 margin-bottom-25">
						<h4>{{ category.name }}</h4>
					</div>
					<ul class="list-1">
						{% for child in category.children %}
						<li><a href="{{ child.href }}">{{ child.name }}</a></li>
						{% endfor %}
					</ul>
				</div>
				{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
{{ footer }}